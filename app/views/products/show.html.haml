.container-fluid
  .shop-info-text
    
    %h1
      = h_product_nav()
      Â» 
      = @product.name
    %span.label.label-important
      Price:
      = @product.price    
    %span.label.label-info
      Desinger:
      = @product.designer
    %span.label.label-info
      Rating:
      = @product.average_rating_round
    %span.label.label-info
      = "(#{@product.comments.count})comments"
      
      
  .row-fluid
    .span9
      .thumbnail
        %a{:href => @product.photo.url, :targe => "_blank"}
          = image_tag @product.photo.normal.url
      %p= @product.desc
      %p= @product.size unless @product.size.blank?
      %h1.comments
        Comments
      .comments-container
        %p
          = render "/comments/leave_comment"
        - unless @product.comments.empty?
          = render partial: "/comments/comment", collection: @product.comments
    .span3        
      %p{:id => "favor"}
        .star
        -if current_user and 
          -if @product.check_favor(current_user) 
            = button_to "Add to Favorites", add_favor_product_path, |
            :method => :put, :class => "btn btn-warning"
          -else
            = button_to "Move from Favorites", cancel_favor_product_path, |
            :method => :put, :class => "btn btn-danger"
      %p 
        %a.btn{:href => @product.model3d.url } Download Model
  

  
  - if current_user and @product.owner?(current_user)      
    = link_to 'Edit', edit_product_path(@product) 
    |
    = link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }
    |
    = link_to 'Back', products_path
