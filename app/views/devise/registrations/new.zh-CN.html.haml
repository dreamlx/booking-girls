%h2 申请试用
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.input :email, :autofocus => true
  %div
    = f.input :password
  %div
    = f.input :password_confirmation
  %div
    = f.hidden_field :role, :value => params[:role]
  %div= f.button :submit

