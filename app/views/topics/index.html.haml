
%section#topics
  %section#topics_info.box.box-gray.info-box
    %span 查看： 默认
  %ul.topics.box
    - @topics.each do |topic|
      %li
        %a.span1(href="")
          
        %article.span7
          %p.topic_title
            = link_to topic.title
          %p.topic_info
            = link_to "分享", nil, class: "node"
            %span= "  •  "
            = link_to "knwang", nil, class: "user_link"
            %span= "  •  "
            = "published #{time_ago_in_words(topic.created_at)} ago"
        %p.replies.span1
          %span 12

