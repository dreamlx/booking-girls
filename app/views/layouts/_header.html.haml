%div{:class => "navbar navbar-inverse navbar-static-top"}
  .navbar-inner
    .container
      = link_to "3DTZK", root_path, :class => "brand"
      %ul{:class => "nav"}
        %li{class: get_menu_status('Create')}=    link_to "Create", new_product_path
        %li{class: get_menu_status('Product')}=    link_to "My Products", favor_products_path
        - if user_signed_in?
          %li{class: get_menu_status('Logout')}=  link_to 'Logout', destroy_user_session_path, :method => :delete
        - else
          %li{class: get_menu_status('Register')}=  link_to 'Register', new_user_registration_path
          %li{class: get_menu_status('Login')}=  link_to 'Login', new_user_session_path

#alert-bar.navbar.navbar-fixed-bottom
  - unless notice.nil?      
    .alert.alert-block= notice 
  -unless alert.nil?
    .alert.alert-error= alert 
