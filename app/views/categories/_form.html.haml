= form_for(@category) do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :parent_id
    %br/
    = f.number_field :parent_id
  .field
    = f.label :lft
    %br/
    = f.number_field :lft
  .field
    = f.label :rgt
    %br/
    = f.number_field :rgt
  .field
    = f.label :depth
    %br/
    = f.number_field :depth
  .actions
    = f.submit
