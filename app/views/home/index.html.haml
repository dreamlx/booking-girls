- if params["venue_id"].blank?
  .hero-unit
    %p= image_tag "home.jpeg"
- else
  %h1= Venue.find( params["venue_id"]).name 
.row-fluid
- if user_signed_in?
  %ul.thumbnails
    - @girls.each do |girl|
      %li.product-box.span4
        %a{:href => girl_path(girl), :class => ["thumbnail", girl.state == 'getoff' ? "gray" : ""]}
          = image_tag(girl.pics.first.photo.thumbnail.url) unless girl.pics.blank?
          .product-details.caption
            .shop-info-text
              %span.label.label-info
                = "年龄：#{girl.age}"
              %span.label.label-info
                = "三围：#{girl.bwh}" 
              %span.label.label-warning
                = "状态：" + t("girls.show.#{girl.state}")
- else
  %center=  link_to t("menu.Login"), new_user_session_path, class: "btn btn-large"
   
  = will_paginate @girls
