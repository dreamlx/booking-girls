
- @lasttime = @girl.tasks.count > 0 ? @girl.tasks.last.endtime.localtime.to_i : 0
#girl-show{ "data-current-id" => @current_id, "data-next-id" => @next_id, "data-pre-id" => @pre_id }
  .container-fluid
    -if session[:user_agent].platform == 'iPad' and @girl.state == 'working'
      #defaultCountdown{ style: 'margin-bottom:20px;', rel: @lasttime }
    .shop-info-text
      %span
        -if session[:user_agent].platform == 'iPad' and @girl.state == 'pending'
          = link_to "预约", booking_girl_path(@girl), class: "btn-large btn", method: 'PUT'  
      %span.label.label-info
        = "姓名：#{@girl.name}"
      %span.label.label-info
        = "年龄：#{@girl.age}"
      %span.label.label-info
        = "价格：#{@girl.price}"
      %span.label.label-info
        = "三围：#{@girl.bwh}" 
      %span.label.label-warning
        = "状态：" + t(".#{@girl.state}") 
    .row-fluid
      .span9{ class: @girl.state == 'getoff' ? "gray" : "" }
        %ul.thumbnails
          - @girl.pics.each_with_index do |pic, index|
            - if index > 0
              %li.span4
                %a{ href: pic.photo.original.url, class: "fancybox thumbnail", rel: "girls-group" }
                  = image_tag pic.photo.thumbnail.url
            - else
              %li.span9
                %a{ href: pic.photo.original.url, class: "fancybox thumbnail", rel: "girls-group" }
                  = image_tag pic.photo.original.url
      .span3
        - if user_signed_in?
          - if @girl.state == 'working' 
            #defaultCountdown{ rel: @lasttime } 
          %hr
          - if not @girl.tasks.last.nil? and @girl.state == 'working'
            %p
              开始时间：
              = @girl.tasks.last.starttime.localtime.strftime("%H:%M")
            %p
              结束时间：
              = @girl.tasks.last.endtime.localtime.strftime("%H:%M")
     
          - case @girl.state
          - when 'pending'
            = link_to "上钟", girl_tasks_path(@girl), class: "btn", method: 'POST'
            = link_to "休假", leave_girl_path(@girl), class: "btn", method: 'PUT'           
          - when 'working'
            = link_to "加钟", girl_task_path(@girl), class: "btn", method: 'PUT'
            = link_to "提前结束", girl_task_path(@girl), class: "btn", method: 'DELETE'
          - when 'getoff'
            = link_to "上班", atwork_girl_path(@girl), class: "btn", method: 'PUT'
          - when 'booked'
            = link_to "上钟", girl_tasks_path(@girl), class: "btn", method: 'POST'
            = link_to "取消预定", booking_girl_path(@girl), class: "btn", method: 'PUT'
          %hr
            - if @girl.state == 'pending' or @girl.state == 'getoff'
              %p= link_to 'Edit', edit_girl_path(@girl), class: "btn" 
              %p= link_to 'Destroy', @girl, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn"
  %p
    %h3 
      技师介绍：
      = @girl.name  
    #girl-desc= @girl.desc
    %h1.comments
      = t("views.comments")
    .comments-container
      %p
        = render "/comments/leave_comment"
      %hr
      - unless @girl.comments.empty?
        = render partial: "/comments/comment", collection: @girl.comments

  



